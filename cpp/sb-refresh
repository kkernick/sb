#!/bin/bash

find $XDG_DATA_HOME/sb/cache/ -type f -delete

for profile in $(ls $HOME/.local/bin/*.sb); do
  echo "Refreshing: ${profile}"
  $profile --dry --update libraries
done
wait

find /run/sb -maxdepth 2 -type d -name "lib" -exec rm -r {} +
find /tmp/sb -maxdepth 2 -type d -name "lib" -exec rm -r {} +
find ~/.local/share/sb -maxdepth 2 -type d -name "lib" -exec rm -r {} +
